{
  "compilerOptions": {
    "target": "es5",                         
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "resolveJsonModule": true,                
    "allowSyntheticDefaultImports": true,  
    "jsx": "react-jsx",  
    "outDir": "./dist",                       
    "rootDir": "./src"                      
  },
  "include": ["src/**/*"],  
  "exclude": ["node_modules"]                  
}
